<project name="ann" basedir="." default="compile">
  <property name="home.dir"  value="." />
  <property name="src.dir"   value="src" />
  <property name="build.dir" value="out" />
  <property name="lib.dir"   value="lib" />
  <property name="dist.dir"  value="${basedir}" />

  <target name="clean">
    <delete dir="${build.dir}"></delete>
    <delete file="xor.xml"></delete>
    <delete file="tmp.xml"></delete>
  </target>

  <path id="classpath">
    <pathelement location="${build.dir}" />
    <fileset dir="${lib.dir}">
      <include name="*.jar" />
    </fileset>
  </path>

  <target name="compile">
    <mkdir dir="${build.dir}" />
    <javac debug="true" includeantruntime="false" srcdir="${src.dir}" destdir="${build.dir}">
      <!-- <compilerarg value="-Xlint"/> -->
      <classpath refid="classpath" />
      <include name="**/*.java"/>
    </javac>        
  </target>

  <target name="run" depends="clean,compile">
    <java classname="org.joedog.ann.tests.XOr" fork="yes">
      <classpath refid="classpath" />
    </java>
  </target>
  
  <target name="numbers" depends="clean,compile">
    <java classname="org.joedog.ann.tests.Numbers" fork="yes">
      <classpath refid="classpath" />
    </java>
  </target>

  <target name="xor" depends="clean,compile">
    <java classname="org.joedog.ann.tests.XOr" fork="yes">
      <classpath refid="classpath" />
    </java>
  </target>

  <target name="trained" depends="clean,compile">
    <java classname="org.joedog.ann.tests.XOrTrained" fork="yes">
      <classpath refid="classpath" />
    </java>
  </target>

  <target name="sqrt" depends="clean,compile">
    <java classname="org.joedog.ann.tests.Sqrt" fork="yes">
      <classpath refid="classpath" />
    </java>
  </target>

  <target name="xand" depends="clean,compile">
    <java classname="org.joedog.ann.tests.XAnd" fork="yes">
      <classpath refid="classpath" />
    </java>
  </target>

  <target name="next" depends="clean,compile">
    <java classname="org.joedog.ann.tests.Next" fork="yes">
      <classpath refid="classpath" />
    </java>
  </target>

  <target name="count" depends="clean,compile">
    <java classname="org.joedog.ann.tests.Count" fork="yes">
      <classpath refid="classpath" />
    </java>
  </target>


  <target name="jar" depends="clean,compile">
    <jar jarfile="${dist.dir}/${ant.project.name}-${version}.jar" basedir="${build.dir}">
      <manifest>  
        <attribute name="Built-By"           value="${user.name}" />  
        <attribute name="Main-Class"         value="org.joedog.ann.Main" />  
        <section name="common">  
          <attribute name="Specification-Title" value="${component.name}" />  
          <attribute name="Specification-Version" value="${component.version}" />  
          <attribute name="Specification-Vendor" value="${component.vendor}" />  
          <attribute name="Implementation-Title" value="${component.name}" />  
          <attribute name="Implementation-Version" value="${component.version} ${TODAY}" />  
          <attribute name="Implementation-Vendor" value="${component.vendor}" />  
        </section>  
        <attribute name="Class-Path" value="${libs.dir}" />  
      </manifest>  
    </jar> 
  </target>

  <target name="main" depends="clean,run" />

</project>
